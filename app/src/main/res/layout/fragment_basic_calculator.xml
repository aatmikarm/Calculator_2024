<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            ads:layout_constraintBottom_toTopOf="@+id/linearLayout"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSecondaryBC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif-light"
                    android:gravity="end|center"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="5+10-3" />


                <TextView
                    android:id="@+id/tvPrimaryBC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center"
                    android:hint="0"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:text="12" />
            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp">

                <TableRow>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btACBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="C"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btBracketOpenBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="("
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btBracketCloseBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text=")"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btDivisionBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="รท"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt7BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="7"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt8BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="8"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt9BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="9"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btMultiplicationBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="ร"

                        android:textSize="33sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt4BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="4"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt5BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="5"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt6BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="6"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btSubtractionBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="-"

                        android:textSize="33sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt1BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="1"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt2BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="2"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt3BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="3"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btAdditionBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="+"

                        android:textSize="33sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <ImageView
                        android:id="@+id/btDeleteBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:padding="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/backspace" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt0BC"
                        style="@style/Light_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="0"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btDotBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="."
                        android:textSize="33sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btEqualBC"
                        style="@style/Dark_Button_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="="
                        android:textColor="@color/white"
                        android:textSize="33sp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
