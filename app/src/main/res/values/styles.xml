<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dark_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <!-- Button text appearance -->
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/dark_btn_bg</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>


    <style name="Light_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="equal_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <!-- Button text appearance -->
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- Custom theme for the Material Date Picker -->
    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Background color for the dialog -->
        <item name="android:background">@color/gray_light</item>
        <!-- Button text color (Set your desired color) -->
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <!--stopWatch styles-->

    <style name="fabBigInv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="android:visibility">invisible</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="line">
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/dayNightColor</item>
    </style>

    <style name="fabBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="tvStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dayNightColor</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Converter styles-->

    <style name="fontStyle">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="sp">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:clickable">false</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="btRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="btOpBig">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="btNumBig">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

</resources>