<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dark_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <!-- Button text appearance -->
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/dark_btn_bg</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="Light_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="equal_Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <!-- Button text appearance -->
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:foreground">@drawable/button_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>